{
  "expo": {
    "name": "mountescrow",
    "slug": "mountescrow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mountescrow",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "extra": {
      "eas": {
        "projectId": "42b2f3b7-621a-4d96-9de3-080b3a99de5e"
      },
      "apiBaseUrl": "${API_BASE_URL}",
      "firebaseApiKey": "${FIREBASE_API_KEY}",
      "firebaseAuthDomain": "${FIREBASE_AUTH_DOMAIN}",
      "firebaseProjectId": "${FIREBASE_PROJECT_ID}",
      "firebaseStorageBucket": "${FIREBASE_STORAGE_BUCKET}",
      "firebaseMessagingSenderId": "${FIREBASE_MESSAGING_SENDER_ID}",
      "firebaseAppId": "${FIREBASE_APP_ID}",
      "router": {}
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#010e5a",
        "foregroundImage": "./assets/images/android-icon-foreground.svg",
        "backgroundImage": "./assets/images/android-icon-background.svg",
        "monochromeImage": "./assets/images/android-icon-monochrome.svg"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.higherent.mountescrowapp"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#ffffff"
          }
        }
      ],
      "expo-font",
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "owner": "higherent"
  }
}
